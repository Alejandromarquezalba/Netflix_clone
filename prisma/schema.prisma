generator client {
  provider = "prisma-client-js"
} 

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  name String? //opcional porque si el usuario elige entrar con cuenta de google no har치 falta que ponga nombre.
  email String @unique
  emailVerified DateTime?
  image String? //opcional porque si el usuario elige entrar con cuenta de google no har치 falta que la imagen sea obligatoria.
  password String? //opcional porque si el usuario elige entrar con cuenta de google no har치 falta que ponga contrase침a.

  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt



}

